{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "target": "ESNext",
    "extends": "@sindresorhus/tsconfig",
    "jsx": "react",
    "lib": [
      "es2020",
      "dom"
    ],
    "module": "NodeNext",
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "rootDir": "./src",
    "outDir": "./.build/js",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ]
}